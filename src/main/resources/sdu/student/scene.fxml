<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
           prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="sdu.student.FXMLController" fx:id="mainPane">

    <VBox alignment="CENTER" pickOnBounds="false">
        <HBox alignment="CENTER" pickOnBounds="false">

            <StackPane fx:id="stackPane">
                <Pane fx:id="roomPane"/>
                <ImageView
                        fx:id="imageView"
                        fitHeight="150.0"
                        pickOnBounds="true"
                        preserveRatio="true"
                />
            </StackPane>
        </HBox>
    </VBox>

    <HBox pickOnBounds="false">
        <VBox fx:id="boxName" HBox.hgrow="ALWAYS" pickOnBounds="false">

            <Label fx:id="label" text="Label"/>
            <Button text="North" onAction="#moveNorth"/>
            <Button text="South" onAction="#moveSouth"/>
            <Button text="East" onAction="#moveEast"/>
            <Button text="West" onAction="#moveWest"/>

            <Button text="Interact" onAction="#interact"/>

            <Button text="Market" onAction="#openMarket" fx:id="marketButton" layoutX="189.0" layoutY="178.0" mnemonicParsing="false"/>

            <Label fx:id="playerPositionProperty" />
            <ListView fx:id="playerItems" maxWidth="100" onMouseClicked="#playerItemsClicked" />
        </VBox>
        <VBox HBox.hgrow="ALWAYS" pickOnBounds="false">
        </VBox>
    </HBox>
</StackPane>
